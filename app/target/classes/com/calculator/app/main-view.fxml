<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Button?>
<?import com.calculator.app.WrappedImageView?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.calculator.app.MainController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <!-- Background -->
    <ImageView fx:id="background" preserveRatio="true" >
        <StackPane.margin>
            <Insets top="0" bottom="0" left="0" right="0"/>
        </StackPane.margin>
    </ImageView>
    <VBox fx:id="vBox" alignment="CENTER">
        <ImageView fx:id="logo" preserveRatio="true"/>
        <GridPane fx:id="gridPane">
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="30"/>
                <ColumnConstraints percentWidth="7" />
                <ColumnConstraints percentWidth="38"/>
            </columnConstraints>

            <VBox fx:id="buttonsvbox" GridPane.columnIndex="0" alignment="CENTER" style="-fx-border-color : white;">

                <StackPane>

                    <Button fx:id="weaponButton" />
                </StackPane>
                <StackPane>

                    <Button fx:id="entityButton" />
                </StackPane>
                <StackPane>

                    <Button fx:id="armorButton" />
                </StackPane>
                <StackPane>

                    <Button fx:id="optionsButton" />
                </StackPane>
                <StackPane>
                    <Button fx:id="calculateButton" />
                </StackPane>
            </VBox>

            <StackPane fx:id="mobSelector" GridPane.columnIndex="1" style="-fx-border-color: white">
                <WrappedImageView fx:id="mobWindow" preserveRatio="true"/>
                <ImageView fx:id="mobWindowMob" preserveRatio="true"/>
                <HBox fx:id="entityMobSelection" style="-fx-border-color: blue" alignment="CENTER">
                    <Button fx:id="zombieButton" ></Button>
                    <Button fx:id="skeletonButton" ></Button>
                </HBox>
            </StackPane>

            <StackPane GridPane.columnIndex="2">

            </StackPane>
            <StackPane GridPane.columnIndex="3" fx:id="inventory">
                <WrappedImageView fx:id="inventoryBg" StackPane.alignment="CENTER"/>
                <Pane fx:id="inventoryContainer" StackPane.alignment="CENTER">
                    <VBox fx:id="inventoryContent" VBox.vgrow="ALWAYS" StackPane.alignment="CENTER" style="-fx-border-color: orange">
                        <padding>
                            <Insets topRightBottomLeft="15"/>
                        </padding>
                        <HBox fx:id="armorSelector" alignment="CENTER" minHeight="75" style="-fx-border-color: blue" spacing="5"/>
                        <HBox fx:id="armorInv" spacing="0" alignment="CENTER" style="-fx-border-color: black" VBox.vgrow="ALWAYS" />
                    </VBox>
                </Pane>
            </StackPane>
        </GridPane>
    </VBox>
</StackPane>