<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Button?>
<?import com.calculator.app.WrappedImageView?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.calculator.app.MainController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <!-- Background -->
    <ImageView fx:id="background" preserveRatio="true" >
        <StackPane.margin>
            <Insets top="0" bottom="0" left="0" right="0"/>
        </StackPane.margin>
    </ImageView>
    <VBox fx:id="vBox" alignment="CENTER">
        <ImageView fx:id="logo" preserveRatio="true"/>
        <GridPane fx:id="gridPane">
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="5" />
                <ColumnConstraints percentWidth="45"/>
            </columnConstraints>

            <VBox fx:id="buttonsvbox" GridPane.columnIndex="0" alignment="CENTER" style="-fx-border-color : white;">
                <StackPane fx:id="paneWaponbuttom" style="-fx-border-color : green;">
                    <WrappedImageView fx:id="button1" preserveRatio="true" fitWidth="150"></WrappedImageView>
                    <Button fx:id="button11" ></Button>
                </StackPane>
                <StackPane fx:id="entityWaponbuttom" style="-fx-border-color : green;">
                    <WrappedImageView fx:id="button2" preserveRatio="true" fitWidth="150"></WrappedImageView>
                    <Button fx:id="button21"></Button>
                </StackPane>
                <StackPane fx:id="armorWaponbuttom" style="-fx-border-color : green;">
                    <WrappedImageView fx:id="button3" preserveRatio="true" fitWidth="150"></WrappedImageView>
                    <Button fx:id="button31"></Button>
                </StackPane>
                <StackPane fx:id="optionsWaponbuttom" style="-fx-border-color : green;">
                    <WrappedImageView fx:id="button4" preserveRatio="true" fitWidth="150"></WrappedImageView>
                    <Button fx:id="button41"></Button>
                </StackPane>
            </VBox>
            <StackPane GridPane.columnIndex="1">

            </StackPane>
            <StackPane GridPane.columnIndex="2">

            </StackPane>
            <StackPane GridPane.columnIndex="3" fx:id="inventory">
                <WrappedImageView fx:id="inventoryBg" StackPane.alignment="CENTER"/>
                <Pane fx:id="inventoryContainer" StackPane.alignment="CENTER">
                    <VBox fx:id="inventoryContent" VBox.vgrow="ALWAYS" StackPane.alignment="CENTER">
                        <padding>
                            <Insets topRightBottomLeft="15"/>
                        </padding>
                        <HBox fx:id="armorSelector" alignment="CENTER" >

                        </HBox>
                        <HBox fx:id="armorInv" spacing="0" alignment="CENTER"/>
                    </VBox>
                </Pane>
            </StackPane>
        </GridPane>
    </VBox>
</StackPane>